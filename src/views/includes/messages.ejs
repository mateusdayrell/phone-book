<% if (errors.length > 0) { %>
    <div class="row">
        <div class="col">
            <div class="alert alert-danger">
                    <% errors.forEach(error => { %>
                        <span><%= error %></span><br>
                    <% }); %>
            </div>
        </div>
    </div>
<% } %>

<% if (success.length > 0) { %>
    <div class="row">
        <div class="col">
            <div class="alert alert-success">
                    <% success.forEach(scs => { %>
                        <span><%= scs %></span><br>
                    <% }); %>
            </div>
        </div>
    </div>
<% } %>