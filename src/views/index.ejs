<%- include('includes/header') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-2">
                    <h1 class="display-3 text-center">Agenda</h1>
                    <p class="text-center lead">Lista de contatos</p>

                    <%- include('includes/messages') %>

                    <div class="responsive-table mt-4">
                        <% if(contatos.length > 0) { %>
                            <table class="table table-hover my-3">
                                <thead>
                                    <tr>
                                        <th scope="col">Nome</th>
                                        <th scope="col">Sobrenome</th>
                                        <th scope="col">Telefone</th>
                                        <th scope="col">Email</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- <tr class="table-light">
                                        <th scope="row" colspan="4">A</th>
                                    </tr> -->
                                    <% contatos.forEach(contato => { %>
                                        <tr>
                                            <td scope="row"><%= contato.name %></td>
                                            <td><%= contato.lastName %></td>
                                            <td><%= contato.phone %></td>
                                            <td><%= contato.email %></td>
                                            <td>
                                                <a href="/contato/edit/<%= contato._id%>" class="btn btn-primary rounded-pill" type="button">Editar</a>
                                            </td>
                                            <td>
                                                <a href="/contato/delete/<%= contato._id%>" class="btn btn-danger rounded-pill"">Apagar</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <div class="my-5 text-center">
                                <h2>Você ainda não possui contatos cadastrados</h2>
                                <p>Clique no botão abaixo para cadastrar um contato</p>
                                <a href="/contato/create" class=" text center btn btn-primary rounded-pill" type="button">Cadastrar</a>
                            </div>
                        <% } %>
                    </div>
                    <% if(contatos.length > 0) { %>
                        <a href="/contato/create" class=" text center btn btn-primary rounded-pill" type="button">Cadastrar</a>
                    <% } %>
                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>